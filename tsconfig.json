{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "es2023",
    "lib": ["es2023"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
