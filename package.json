{
  "name": "@ravshansbox/pg-migrate",
  "version": "0.3.2",
  "author": "Ravshan Samandarov",
  "license": "MIT",
  "description": "PostgreSQL Migration tool for NodeJS",
  "keywords": [
    "database",
    "postgresql",
    "migration",
    "nodejs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ravshansbox/pg-migrate.git"
  },
  "bin": {
    "pg-migrate": "dist/esm/bin/migrate.js"
  },
  "exports": {
    "types": "./dist/types/index.d.ts",
    "require": "./dist/cjs/index.js",
    "import": "./dist/esm/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build:esm": "tsc --module esnext --outDir dist/esm",
    "build:types": "tsc --declaration --emitDeclarationOnly --declarationDir dist/types",
    "build:w": "tsup-node --clean --dts --format cjs,esm --watch 'src/**/*.ts' src/index.ts src/bin/migrate.ts",
    "chmod:cjs": "chmod +x ./dist/cjs/bin/migrate.js",
    "chmod:esm": "chmod +x ./dist/esm/bin/migrate.js",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "pg": "^8.14.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/pg": "^8.11.11",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  }
}
